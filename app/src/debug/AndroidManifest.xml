<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.busytrack.openlivetrivia">

    <application
            tools:replace="android:name"
            tools:ignore="GoogleAppIndexingWarning"
            android:name=".application.OpenLiveTriviaDebugApp">

        <!--Don't report crashes in debug builds-->
        <meta-data
                android:name="firebase_crashlytics_collection_enabled"
                android:value="false" />

        <!--Used for unit testing with Robolectric-->
        <activity android:name=".generic.activity.BaseActivityImpl" />
    </application>

</manifest>
