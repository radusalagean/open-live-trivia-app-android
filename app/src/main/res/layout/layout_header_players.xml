<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/layout_header_players"
    android:orientation="horizontal"
    android:background="@drawable/game_header_background"
    android:translationZ="8dp">

    <View
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/dot_online_players"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="4dp"/>

    <com.busytrack.openlivetrivia.view.PlayersTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_online_players"
        tools:text="1 player"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"/>

</LinearLayout>