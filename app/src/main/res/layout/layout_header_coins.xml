<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/layout_header_coins"
    android:orientation="horizontal"
    android:background="@drawable/game_header_background"
    android:translationZ="8dp">

    <com.busytrack.openlivetrivia.view.CoinsTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_my_coins"
        tools:text="100.00"
        android:maxLines="1"
        fontPath="fonts/ShareTechMono-Regular.ttf"
        android:textSize="16sp"
        android:layout_marginEnd="4dp"
        android:ellipsize="end"
        android:layout_gravity="center_vertical"
        android:includeFontPadding="false"/>

    <com.busytrack.openlivetrivia.view.CoinView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/coin_view_my_coins"/>

</LinearLayout>
