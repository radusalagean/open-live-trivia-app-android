<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/leaderboard_swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/screen_horizontal_padding"
    android:paddingEnd="@dimen/screen_horizontal_padding"
    tools:context=".screen.leaderboard.LeaderboardFragment"
    android:clipChildren="false"
    android:clipToPadding="false">

    <com.busytrack.openlivetrivia.view.ScrollAwareRecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/leaderboard_recycler_view"
        tools:listitem="@layout/item_user_compact"
        android:clipToPadding="false"
        android:overScrollMode="never"/>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>