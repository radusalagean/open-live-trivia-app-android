<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <!--Override default UI styles-->
        <item name="android:buttonStyle">@style/button_regular</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button_regular" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontPath">fonts/NunitoSans-Bold.ttf</item>
        <item name="android:translationZ">8dp</item>
        <item name="android:stateListAnimator">@animator/button_animator</item>
        <item name="android:background">@drawable/button_regular</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="button_negative" parent="button_regular">
        <item name="android:background">@drawable/button_negative</item>
        <item name="android:textColor">@drawable/button_negative_text_color</item>
    </style>
    
    <style name="main_menu_text_view_coin_indicator">
        <item name="android:background">@drawable/text_view_main_menu_coin_indicator</item>
        <item name="fontPath">fonts/Teko-Regular.ttf</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/coin_color</item>
    </style>

    <style name="text_view_clue_category">
        <item name="android:background">@drawable/text_view_clue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>
