<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>

        <!--THESE ARE FOR TRANSLLUCENT UI-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <!--<item name="android:windowTranslucentNavigation">true</item>-->

        <!--Override default UI styles-->
        <!--<item name="android:buttonStyle">@style/button_regular</item>-->
        <item name="imageButtonStyle">@style/image_button</item>
        <item name="editTextStyle">@style/edit_text</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="edit_text" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="image_button" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/image_button_background</item>
        <item name="android:stateListAnimator">@animator/button_animator</item>
    </style>

    <style name="button_regular" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontPath">fonts/NunitoSans-Bold.ttf</item>
        <item name="android:stateListAnimator">@animator/button_animator</item>
        <item name="android:background">@drawable/button_regular</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="button_negative" parent="button_regular">
        <item name="android:background">@drawable/button_negative_background</item>
        <item name="android:textColor">@drawable/button_negative_text_color</item>
    </style>

    <style name="text_view_clue_category">
        <item name="android:background">@drawable/text_view_clue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="rights_level">
        <item name="android:background">@drawable/text_view_rights_level_background</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="fontPath">fonts/NunitoSans-SemiBold.ttf</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>
